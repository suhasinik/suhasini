<%= semantic_form_for @registration do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :input_html => { :size => 20 } %>
    <%= f.input :email, :input_html => { :size => 20 } %>
    <%= f.input :cell, :input_html => { :size => 20 } %>
    <%= f.input :category, :as => :select, :collection => [:one, :two, :three], :label => "group" %>
    <%= f.input :gender, :as => :radio, :collection => [:Male, :Female] %>
    <%= f.input :address, :input_html => { :class => 'autogrow', :rows => 7, :cols => 18, :maxlength => 200  } %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
